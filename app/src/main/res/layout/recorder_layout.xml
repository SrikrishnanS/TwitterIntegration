<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_photo"
        android:id="@+id/photo"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_video"
        android:id="@+id/video"
        android:layout_alignBottom="@+id/photo"
        android:layout_toRightOf="@+id/photo"
        android:layout_toEndOf="@+id/photo"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/preview_image"
        android:layout_gravity="center"
        android:layout_above="@+id/save_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <VideoView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/preview_video"
        android:layout_gravity="center"
        android:layout_above="@+id/save_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/save_button"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/preview_image" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISCARD"
        android:id="@+id/discard_image"
        android:visibility="invisible"
        android:layout_below="@+id/preview_image"
        android:layout_alignEnd="@+id/preview_image" />

    <ImageButton
        android:layout_width="64px"
        android:layout_height="64px"
        android:id="@+id/tweet_button"
        android:src="@drawable/ico_twitter"
        android:layout_marginBottom="7dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>